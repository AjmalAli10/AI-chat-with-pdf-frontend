{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://ai-chat-with-pdf-backend.vercel.app/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "https://ai-chat-with-pdf-backend.vercel.app/uploads/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_NODE_ENV": "production"
  }
}
